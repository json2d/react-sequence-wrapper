{
  "parserOptions": { "ecmaVersion": 6 },
  "extends": "rackt",
  "rules": {
    "semi": [1,"always"],
    "valid-jsdoc": 2,
    // Disable until Flow supports let and const
    "no-var": 0,
    "react/jsx-uses-vars": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-no-undef": 2,
    "react/wrap-multilines": 2
  },
  "plugins": [
    "react"
  ]
}
